<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:orientation="vertical"
            android:padding="@dimen/margin_5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:padding="@dimen/margin_5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_demo"
                app:shapeAppearanceOverlay="@style/Round_Image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_profile"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_name"
                    style="@style/TextAppearance_smallsubheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:lines="2"
                    android:text="@string/text_hint"
                    android:textColor="?colorAccent" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>